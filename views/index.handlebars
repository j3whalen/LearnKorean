<div class="center">
  <h2 class="page-header">Hello, {{user.name}}! Welcome To your Dashboard!</h2>
  <p>Put Statistics here</p>
</div>
  {{#if errors}}
    {{#each errors}}
    <div>
      <div class="alert alert-danger">
        {{{msg}}}
      </div>
    </div>
    {{/each}}
  {{/if}}
<form action="/learn" method="post">
  <h2 class="text-center">Please select a category and a way to study to start learning korean!</h2>
  <h3 class="text-center">Categories</h3>
  <div class="container-fluid text-center">
    <div class="row">
      <fieldset>
      <div class="col-lg-3">
        <input type="radio" value="food" name="category">Food
      </div>
      <div class="col-lg-3">
        <input type="radio" value="locations" name="category">Locations
      </div>
      <div class="col-lg-3">
        <input type="radio" value="hangul" name="category">Hangul
      </div>
      <div class="col-lg-3">
        <input type="radio" value="greetings" name="category">Greetings and Phrases
      </div>
      </fieldset>
    </div>
  </div>
  <h3 class="text-center">Ways To Learn</h3>
  <div class="container-fluid text-center">
    <div class="row">
      <fieldset>
      <div class="col-lg-4">
        <input type="radio" value="flashcards" name="learnmethod">Flash Cards
      </div>
      <div class="col-lg-4">
        <input type="radio" value="matching" name="learnmethod">Matching
      </div>
      </fieldset>
    </div>
  </div>
  <input type="submit" value="LEARN!">
</form>
